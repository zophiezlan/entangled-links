# Entangled Links Environment Configuration
# Copy this file to .env for local development

# Environment
ENVIRONMENT=development

# Cloudflare Account ID (get from dashboard)
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# Cloudflare API Token (create at https://dash.cloudflare.com/profile/api-tokens)
# Required scopes: Workers Scripts:Edit, Workers KV Storage:Edit
CLOUDFLARE_API_TOKEN=your_api_token_here

# KV Namespace IDs (generated via wrangler kv:namespace create)
KV_NAMESPACE_ID_DEV=your_dev_namespace_id
KV_NAMESPACE_ID_STAGING=your_staging_namespace_id
KV_NAMESPACE_ID_PROD=your_prod_namespace_id

# Rate Limiting Configuration
RATE_LIMIT_MAX_REQUESTS=20
RATE_LIMIT_WINDOW_MS=60000

# Security Configuration
MAX_REQUEST_SIZE_BYTES=10240
MAX_URL_LENGTH=2048

# Optional: Custom Domain
# CUSTOM_DOMAIN=links.yourdomain.com

# Optional: Analytics
# ANALYTICS_ENABLED=true

# Optional: Webhook Notifications
# WEBHOOK_URL=https://your-webhook-url.com/notify
